# Drawing Machine Frontend Configuration
# Copy this file to .env.local and modify as needed

# =============================================================================
# BACKEND CONNECTION
# =============================================================================
# Local Development (default)
VITE_BACKEND_URL=ws://localhost:8768

# Railway Production (example)
# VITE_BACKEND_URL=wss://your-app-name.railway.app

# Custom Server (example) 
# VITE_BACKEND_URL=ws://192.168.1.100:8768

# =============================================================================
# CONNECTION SETTINGS
# =============================================================================
VITE_CONNECTION_TIMEOUT=5000
VITE_RECONNECT_INTERVAL=3000
VITE_MAX_RECONNECT_ATTEMPTS=10

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
VITE_DEBUG_MODE=false
VITE_LOG_WEBSOCKET_MESSAGES=false

# =============================================================================
# UI FEATURES
# =============================================================================
# Show connection settings in UI
VITE_SHOW_CONNECTION_UI=true

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true